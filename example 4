#include <stdio.h>
#include <stdlib.h>
/* using if statement only */

int main(void)
{
    int num;
    printf(" enter your  number :");
    scanf(" %d ", &num);
    if (num<=0)
    {
        if (num == 0)
            printf(" %d is zero ");
            else
            printf(" the number %d is negative ", num);
    }
    else
           printf(" the number %d is positive ", num);
           return 0;
}
