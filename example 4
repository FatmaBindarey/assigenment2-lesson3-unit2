#include <stdio.h>
#include <stdlib.h>
/* using if statement only */

int main(void)
{
    int a,b,c;
printf(" enter your three numbers :");
scanf(" %d %d %d ", &a,&b,&c);
    if (a>=b && a>=c)
printf(" a (%d) is the largest number ",a);
    if (c>=b && c>=a)
printf(" c (%d) is the largest number ",c);
    if (b>=c && b>=a)
printf(" b (%d) is the largest number ",b);
}
