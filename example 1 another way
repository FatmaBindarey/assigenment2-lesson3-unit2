 #include <stdio.h>
#include <stdlib.h>


int main(void)
{
	int n;
	printf(" enter the number : ");
	scanf(" %d " ,&n);
	((n%2 )==0)?  printf(" %d is even" , n) : printf(" %d is odd ", n);
        /* if the reminder equal zero then it is even */
        return 0;
}

